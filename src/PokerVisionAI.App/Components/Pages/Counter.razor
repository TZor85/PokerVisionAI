    <!-- Contenido principal -->
    <div class="row g-3">
        <!-- Panel Izquierdo -->
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <!-- Botones y Test -->
                    <div class="d-flex gap-2 flex-wrap mb-3">
                        <button class="btn btn-sm btn-primary" @onclick="OnNew">New</button>
                        <button class="btn btn-sm btn-danger" @onclick="OnDelete">Delete</button>
                        <div class="form-check ms-2">
                            <input class="form-check-input" type="checkbox" @bind="isTest" id="testCheck">
                            <label class="form-check-label" for="testCheck">Test</label>
                        </div>
                    </div>

                    <!-- Lista de elementos -->
                    <div class="list-group mb-3">
                        @foreach (var item in listItems)
                        {
                            <button class="list-group-item list-group-item-action 
                                    @(selectedItem == item ? "active" : "")"
                                    @onclick="() => SelectItem(item)">
                                @item
                            </button>
                        }
                    </div>

                    <!-- Checkboxes inferiores -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" @bind="isFlop" id="flopCheck">
                        <label class="form-check-label" for="flopCheck">Flop</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" @bind="isTurn" id="turnCheck">
                        <label class="form-check-label" for="turnCheck">Turn</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="isRiver" id="riverCheck">
                        <label class="form-check-label" for="riverCheck">River</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel Central -->
        <div class="col-12 col-md-4 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <!-- Controles Rectangle -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0">Rectangle</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <label class="form-label">Width</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" @bind="width">
                                        <button class="btn btn-outline-secondary" @onclick="() => AdjustWidth(1)">+</button>
                                        <button class="btn btn-outline-secondary" @onclick="() => AdjustWidth(-1)">-</button>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label class="form-label">Height</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" @bind="height">
                                        <button class="btn btn-outline-secondary" @onclick="() => AdjustHeight(1)">+</button>
                                        <button class="btn btn-outline-secondary" @onclick="() => AdjustHeight(-1)">-</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Color y Checkboxes -->
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="text" class="form-control mb-2" @bind="color">
                        <div class="d-flex gap-3 flex-wrap">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="isBoard" id="boardCheck">
                                <label class="form-check-label" for="boardCheck">Board</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="isColor" id="colorCheck">
                                <label class="form-check-label" for="colorCheck">Color</label>
                            </div>
                        </div>
                    </div>

                    <!-- Área de Preview -->
                    <div class="border rounded mb-3" style="min-height: 200px;">
                        <!-- Área de preview aquí -->
                    </div>

                    <!-- Label -->
                    <div class="text-center">
                        <span>label9</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel Derecho -->
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <!-- Controles Nudge -->
                    <h6 class="card-title mb-3">Nudge</h6>
                    <div class="d-flex justify-content-center mb-4">
                        <div class="nudge-grid">
                            @foreach (var dir in new[] { "↖", "↑", "↗", "←", "•", "→", "↙", "↓", "↘" })
                            {
                                <button class="btn btn-outline-secondary p-1" @onclick="() => OnNudge(dir)">
                                    @dir
                                </button>
                            }
                        </div>
                    </div>

                    <!-- Coordenadas -->
                    <div class="mb-3">
                        <div class="row g-2 align-items-center">
                            <div class="col-2">
                                <label class="col-form-label">X</label>
                            </div>
                            <div class="col-10">
                                <input type="number" class="form-control" @bind="x">
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="row g-2 align-items-center">
                            <div class="col-2">
                                <label class="col-form-label">Y</label>
                            </div>
                            <div class="col-10">
                                <input type="number" class="form-control" @bind="y">
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-grid gap-2 mb-4">
                        <button class="btn btn-primary" @onclick="OnCreateImage">Create Image</button>
                        <button class="btn btn-primary" @onclick="OnCreateFont">Create Font</button>
                        <button class="btn btn-primary" @onclick="OnLoadMap">Load Map</button>
                        <button class="btn btn-primary" @onclick="OnSaveMap">Save Map</button>
                    </div>

                    <!-- Área Window -->
                    <div class="border rounded p-2 mb-3 text-center" style="min-height: 100px;">
                        Window
                    </div>

                    <!-- Checkbox Marcar Mano -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="isMarcarMano" id="marcarManoCheck">
                        <label class="form-check-label" for="marcarManoCheck">Marcar Mano</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nudge-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 4px;
        width: 120px;
    }

    .nudge-grid .btn {
        width: 36px;
        height: 36px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

